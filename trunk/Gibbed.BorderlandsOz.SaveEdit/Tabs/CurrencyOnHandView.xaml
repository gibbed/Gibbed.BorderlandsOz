<UserControl x:Class="Gibbed.BorderlandsOz.SaveEdit.CurrencyOnHandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <StackPanel>
        <Expander Header="Currency"
                  IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.50*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0"
                      Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1"
                           DockPanel.Dock="Right"
                           Source="..\Resources\credits.png"
                           Height="24" />
                    <Label x:Name="CreditsLabel"
                           Grid.Column="0"
                           HorizontalContentAlignment="Right"
                           Content="Credits:" />
                </Grid>
                <xctk:IntegerUpDown Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=Credits, UpdateSourceTrigger=PropertyChanged}" />
                <Grid Grid.Row="1"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1"
                           DockPanel.Dock="Right"
                           Source="..\Resources\moonstone.png"
                           Height="24" />
                    <Label Grid.Column="0"
                           HorizontalContentAlignment="Right"
                           Content="Moonstones:" />
                </Grid>
                <xctk:IntegerUpDown Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=Eridium, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Expander>
        <Expander Header="Reserved"
                  IsExpanded="False">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.50*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1"
                           DockPanel.Dock="Right"
                           Source="..\Resources\seraph crystal.png"
                           Height="24" />
                    <Label Grid.Column="0"
                           HorizontalContentAlignment="Right"
                           Content="Seraph Crystals:" />
                </Grid>
                <xctk:IntegerUpDown Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=SeraphCrystals, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="A:" Grid.Row="1" />
                <xctk:IntegerUpDown Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedA, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" />
                <Label Grid.Row="3"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="B:" />
                <xctk:IntegerUpDown Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedB, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="4"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Shift Coins:" />
                <xctk:IntegerUpDown Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ShiftCoins, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="5"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="D:" />
                <xctk:IntegerUpDown Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedD, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="6"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="E:" />
                <xctk:IntegerUpDown Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedE, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="7"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="F:" />
                <xctk:IntegerUpDown Grid.Row="7"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedF, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="8"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="G:" />
                <xctk:IntegerUpDown Grid.Row="8"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedG, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="9"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="H:" />
                <xctk:IntegerUpDown Grid.Row="9"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedH, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="10"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="I:" />
                <xctk:IntegerUpDown Grid.Row="10"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedI, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="11"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="J:" />
                <xctk:IntegerUpDown Grid.Row="11"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding Path=ReservedJ, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Expander>
    </StackPanel>
</UserControl>