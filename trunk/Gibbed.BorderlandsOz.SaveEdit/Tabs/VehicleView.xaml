<UserControl x:Class="Gibbed.BorderlandsOz.SaveEdit.VehicleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="720"
             d:DesignHeight="480">
    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupedMoonBuggyAssets1"
                              Source="{Binding Path=MoonBuggyAssets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="GroupedMoonBuggyAssets2"
                              Source="{Binding Path=MoonBuggyAssets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="GroupedStingRayAssets1"
                              Source="{Binding Path=StingRayAssets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="GroupedStingRayAssets2"
                              Source="{Binding Path=StingRayAssets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="GroupedStingRayAssets3"
                              Source="{Binding Path=StingRayAssets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="GroupedStingRayAssets4"
                              Source="{Binding Path=StingRayAssets}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <Expander Header="Moon Buggy"
                  IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.50*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Skin #1:" />
                <ComboBox Grid.Row="0"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding Source={StaticResource GroupedMoonBuggyAssets1}}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectedValue="{Binding Path=SelectedMoonBuggy1}">
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="15"
                                               FontWeight="Bold"
                                               Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                </ComboBox>
                <Label Grid.Row="1"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Skin #2:" />
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding Source={StaticResource GroupedMoonBuggyAssets2}}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectedValue="{Binding Path=SelectedMoonBuggy2}">
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="15"
                                               FontWeight="Bold"
                                               Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                </ComboBox>
            </Grid>
        </Expander>
        <Expander Header="Stingray"
                  IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.50*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Skin #1:" />
                <ComboBox Grid.Row="0"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding Source={StaticResource GroupedStingRayAssets1}}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectedValue="{Binding Path=SelectedStingRay1}">
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="15"
                                               FontWeight="Bold"
                                               Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                </ComboBox>
                <Label Grid.Row="1"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Skin #2:" />
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding Source={StaticResource GroupedStingRayAssets2}}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectedValue="{Binding Path=SelectedStingRay2}">
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="15"
                                               FontWeight="Bold"
                                               Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                </ComboBox>
                <Label Grid.Row="2"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Skin #3:" />
                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding Source={StaticResource GroupedStingRayAssets3}}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectedValue="{Binding Path=SelectedStingRay3}">
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="15"
                                               FontWeight="Bold"
                                               Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                </ComboBox>
                <Label Grid.Row="3"
                       Grid.Column="0"
                       HorizontalContentAlignment="Right"
                       Content="Skin #4:" />
                <ComboBox Grid.Row="3"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding Source={StaticResource GroupedStingRayAssets4}}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectedValue="{Binding Path=SelectedStingRay4}">
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="15"
                                               FontWeight="Bold"
                                               Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                </ComboBox>
            </Grid>
        </Expander>
    </StackPanel>
</UserControl>